{
  "name": "hello-world-api",
  "version": "1.0.0",
  "description": "Dockerised Hello World API (Express + PostgreSQL) deployed with AWS CDK",
  "type": "module",
  "main": "dist/index.js",

  "scripts": {
    "dev": "nodemon --watch src --exec ts-node src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "test": "jest --coverage"
  },

  "engines": {
    "node": "^20.0.0"
  },

  "dependencies": {
    "express": "^4.18.4",
    "pg": "^8.11.3"
  },

  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.6.6",

    "typescript": "^5.4.5",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",

    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.5",

    "nodemon": "^3.1.0"
  },

  "license": "MIT"
}
